<!-- show all questions belonging to user -->
<h3>My Posts</h3>

<% @myqns.each do |q| %>
  <h3> Title: <%= q.title %></h3>
  <p> Question: <br><%= q.questions %></p> <br>
  <%= q.created_at %> <br>
  <%= link_to "Show", user_question_path(q.user_id, q) %>
  <%= link_to "Edit", edit_user_question_path(current_user, q) %>
  <%= link_to "Delete", user_question_path(current_user, q), method: :delete, data: { confirm: "Are You Sure?" } %>
  <hr>
<% end %>
<br>
<%= link_to "Back", home_path %>
