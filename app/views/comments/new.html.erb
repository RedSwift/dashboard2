<!-- displaying the question -->
<h1>Question ID: <%= @qns.id %></h1>
<h3>Title: <%= @qns.title %></h3>
<p><%= @qns.questions %></p>
<p>Updated at: <%= @qns.updated_at %></p>
<p>User ID: <%= @qns.user_id %></p>
<hr>

<!-- form for adding comments -->
<h1>Add your comment</h1>
<%= simple_form_for [current_user, @qns, @comment] do |f| %>
  <%= f.input :title %>
  <%= f.input :comments %>
  <%= f.button :submit %>
<% end %>
<hr>

<!-- displaying all comments -->
<% if @prev_comments.present? %>
<h3>Comments for this post</h3>
  <% @prev_comments.each do |c| %>
  <h3>Title: <%= c.title %></h3>
  <p><%= c.comments %></p>
  <p>Updated at: <%= c.updated_at %></p>
  <p>User ID: <%= c.user_id %></p>
  <hr>
  <% end %>
<% end %>

<%= link_to "Back", user_question_path(current_user, @qns) %>
